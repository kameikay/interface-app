<%- include('../includes/head') %>

    <body>
        <%- include('../includes/preloader') %>

        <%- include('../includes/header') %>

        <%- include('../includes/whatsapp-button') %>


        <main class="portfolio-page">
            <div class="portfolio-page__container">
                <div class="portfolio-page__container__title">
                    <h2>PORTFÓLIO</h2>
                </div>

                <div class="portfolio-page__container__cases">

                    <% portfolio.map(el => { %> 
                        <div class="portfolio-page__container__cases__card">
                            <a href="/portfolio/<%= el._id %>">
                                <img src="<%= el.images[0].url %> " alt="FOTO DE SERVIÇO REALIZADO">
                            </a>

                            <div class="portfolio-page__container__cases__card__description">
                                <p><%= el.name %> </p> 
                                <a href="/portfolio/<%= el._id %> "><img src="./images/mais.png" alt="BOTÃO PARA VER MAIS"></a>
                            </div>
                        </div>
                    <% }) %> 
                </div>

                
            </div>
        </main>

        <%- include('../includes/footer') %>


        <script src="./scripts/preloader.js" type="text/javascript"></script>
        <script src="./scripts/header.js" type="text/javascript"></script>

    </body>
</html>
