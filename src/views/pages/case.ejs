<%- include('../includes/head') %>

    <body>
        <%- include('../includes/preloader') %>

        <%- include('../includes/header') %>

        <%- include('../includes/whatsapp-button') %>

        <main class="case">
            <div class="case__container">
                <div class="case__container__title">
                    <h2><%= portfolioCase.name %> </h2>
                </div>

                <div class="case__container__description">
                    <h4>Descrição</h4>
                    <p id="case-local"><%= portfolioCase.address %> </p>
                    <p>Serviço: <span id="case-descricao"><%= portfolioCase.description %></span></p>
                </div>

                <div class="case__container__midia">
                    <% if (portfolioCase.videoURL) { %> 
                        <div class="case__container__midia__video">
                                <iframe src="https://www.youtube.com/embed/IX0r4H2i9uY" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
                        </div>
                    <% } %> 
                    
                    <div class="case__container__midia__fotos">
                        <div class="case__container__midia__fotos__title">
                            <h4>Fotos de nosso trabalho</h4>
                            <p>Registros fotográficos que comprovam nossa excelência</p>
                        </div>
                        <div
                            style="
                                --swiper-navigation-color: #fff;
                                --swiper-pagination-color: #fff;
                            "
                            class="swiper-container mySwiper2"
                        >
                            <div class="swiper-wrapper">
                                <% portfolioCase.images.forEach(image => { %> 
                                    <div class="swiper-slide">
                                        <img
                                            src="<%= image.url %> "
                                        />
                                    </div>
                                <% }) %> 
                            </div>
                            <div class="swiper-button-next"></div>
                            <div class="swiper-button-prev"></div>
                        </div>
                        <div thumbsSlider="" class="swiper-container mySwiper">
                            <div class="swiper-wrapper">
                                <% portfolioCase.images.forEach(image => { %> 
                                    <div class="swiper-slide">
                                        <img
                                            src="<%= image.url %> "
                                        />
                                    </div>
                                <% }) %> 
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>

        <%- include('../includes/footer') %>


        <script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>

        <script src="../scripts/preloader.js" type="text/javascript"></script>
        <script src="../scripts/header.js" type="text/javascript"></script>

        <script>
            var swiper = new Swiper(".mySwiper", {
                loop: true,
                spaceBetween: 10,
                slidesPerView: 3,
                freeMode: true,
                watchSlidesVisibility: true,
                watchSlidesProgress: true,
            });
            var swiper2 = new Swiper(".mySwiper2", {
                loop: true,
                spaceBetween: 10,
                navigation: {
                    nextEl: ".swiper-button-next",
                    prevEl: ".swiper-button-prev",
                },
                thumbs: {
                    swiper: swiper,
                },
            });
        </script>
    </body>
</html>
