<!DOCTYPE html>
<html lang="pt-br">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="theme-color" content="#1d99a7" />
        <link
            rel="stylesheet"
            href="https://unpkg.com/swiper/swiper-bundle.min.css"
        />
        <% if (title === 'Interface | Admin' || title === 'Interface | Página não encontrada' || title === 'Interface | Portfólio - Serviço') { %>
            <link rel="stylesheet" href="../styles/style.css" />
            <link rel="stylesheet" href="../../styles/style.css" />
            <link rel="shortcut icon" href="../images/favicon-32x32.png" />
            <link rel="shortcut icon" href="../../images/favicon-32x32.png" />
        <% } %>
        
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;500;600;700&display=swap"
            rel="stylesheet"
        />
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous">

        <script src="https://rawgit.com/enyo/dropzone/master/dist/dropzone.js"></script>
        <link rel="stylesheet" href="https://rawgit.com/enyo/dropzone/master/dist/dropzone.css"/>

        <title><%- title %></title>
    </head>
</html>


    <body>
        <%- include('../includes/preloader') %>

        <div class="admin-container">

        <%- include('../includes/asideAdmin') %>

            <main class="main">
                <div class="main__container">
                    <div class="new-post">
                        <h2 class="title-new-post">CRIAR NOVO PORTFÓLIO</h2>

                        <%- include('../includes/messages') %> 

                        <form action="/user/register" method="POST" id="new-post" name="new-post" enctype="multipart/form-data">

                            <div class="name-category">
                                <div class="name">
                                    <label for="name">Nome:</label>
                                    <input type="text" id="name" name="name" required>
                                </div>
                    
                                <div class="category">
                                    <label for="category">Categoria:</label>
                                    <select name="category" id="category">
                                        <option value="placas">Placas Solares</option>
                                        <option value="chuva">Água da chuva</option>
                                    </select>
                                </div>
                            </div>

                            <div class="address">
                                <label for="address">Endereço:</label>
                                <input name="address" id="address" type="text" required></input>
                            </div>

                            <div class="description">
                                <label for="description">Descrição:</label>
                                <textarea type="text" name="description" id="description" required></textarea>
                            </div>

                            <div class="video">
                                <label for="videoURL">URL do vídeo:</label>
                                <input type="text" id="videoURL" name="videoURL">
                            </div>
                            
                            <div class="imagesClass">
                                <!-- <label for="images">Fotos:</label>
                                <input type="file" name="images" multiple required> -->
                                <div class="dropzone dropzone-file-area" id="fileUpload">
                                    <div class="dz-default dz-message">
                                        <h3 class="sbold">Drop files here to upload</h3>
                                        <span>You can also click to open file browser</span>
                                    </div>
                                    <div class="fallback">
                                        <input type="file" name="images" multiple hidden>

                                    </div>
                                </div>
                                    
                            </div>
                    
                            <button type="submit" form="new-post" id="submit-btn">Salvar</button>
                        </form>

                    </div>
                </div>
            </main>
    
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj" crossorigin="anonymous"></script>
        <script src="../scripts/preloader.js" type="text/javascript"></script>
        <script>
            
            Dropzone.options.fileUpload = {
                paramName: 'images',
                autoDiscover: false,
                maxFilesize: 5,
                url: '/user/register',
                uploadMultiple: true,
                parallelUploads: 5,
                addRemoveLinks: true,
                acceptedFiles: 'image/*',
                autoProcessQueue: false,
            }

        </script>
    </body>
</html>
