<%- include('includes/head') %>

    <body>
        <%- include('includes/preloader') %>

        <div class="admin-container">

        <%- include('includes/asideAdmin') %>

            <main class="main">
                <div class="main__container">
                    <div class="new-post">
                        <h2 class="title-new-post">CRIAR NOVO PORTFÓLIO</h2>

                        <%- include('includes/error') %> 

                        <form action="/user/register" method="POST" id="new-post">
                            <input type="hidden" name="_csrf" value="<%=csrfToken %>">

                            <div class="name-category">
                                <div class="name">
                                    <label for="name">Nome:</label>
                                    <input type="text" id="name" name="name" required>
                                </div>
                    
                                <div class="category">
                                    <label for="category">Categoria:</label>
                                    <select name="category" id="category">
                                        <option value="placas">Placas Solares</option>
                                        <option value="chuva">Água da chuva</option>
                                    </select>
                                </div>
                            </div>

                            <div class="address">
                                <label for="address">Endereço:</label>
                                <input name="address" id="address" required></input>
                            </div>

                            <div class="description">
                                <label for="description">Descrição:</label>
                                <textarea name="description" id="description" required></textarea>
                            </div>

                            <div class="video">
                                <label for="videoURL">URL do vídeo:</label>
                                <input type="text" id="videoURL" name="videURL">
                            </div>
                    
                            <div class="images">
                                <label for="images">Fotos:</label>
                                <input type="file" name="images" id="images">
                            </div>
                    
                            <button type="submit" form="new-post">Salvar</button>
                        </form>
                    </div>

                </div>
            </main>
    
        </div>
        
        <script src="../scripts/preloader.js" type="text/javascript"></script>
    </body>
</html>
